<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="20dp"
    android:background="@drawable/fondo_button_azul_borde">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
                android:orientation="horizontal"
            android:layout_marginTop="10dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <TextView
                    android:id="@+id/nombre_libro_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Nombre"
                    android:layout_marginStart="10dp"
                    android:textColor="#000000"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/nombre_cliente_txt_prestado"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingStart="20dp"
                    android:text="nombre "
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>


                <TextView
                    android:id="@+id/autor_libro_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="N° cuenta cliente"
                    android:textColor="#000000"
                    android:layout_marginStart="10dp"

                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/cuenta_txt_cliente"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:paddingStart="20dp"
                    android:text="cuenta"
                    android:textStyle="bold"
                    android:textColor="@color/azul"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <TextView
                    android:id="@+id/fecha_prestamo_libro_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="N° cedula cliente"
                    android:layout_marginStart="10dp"

                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/cedula_cliente_txt"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingStart="20dp"
                    android:text= "cedula"
                    android:textColor="#5C5757"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>






        </LinearLayout>

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="vertical"
            android:layout_marginTop="190dp"
            android:background="@drawable/fondo_button_azul">

                <TextView
                    android:id="@+id/saldo_cliente_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="-2sp"
                    android:drawableLeft="@drawable/money"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="1.000.000"/>


        </LinearLayout>













</LinearLayout>