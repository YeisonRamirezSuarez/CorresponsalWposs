<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/fondosecundarioazul"
    android:paddingHorizontal="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_bold"
            style="@style/shadoweffect"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:text="Actualizar estado"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="35dp"/>

        <ImageView
            android:id="@+id/volver"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginTop="-60dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_flecha"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/azul"/>

    <RelativeLayout
        android:layout_gravity="center"
        android:id="@+id/relativeLayout2"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/fondo_button_azul_borde_blanco"
        android:elevation="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="162dp"
            android:text="Corresponsal"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/txt_nombre_confirmacion_corresponsal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="115dp"
            android:layout_marginTop="32dp"
            android:text="Nombre Cliente"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="39dp"
            android:text="Idenficado con numero de NIT"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="89dp"
            android:layout_marginEnd="39dp"
            android:text="Correo electronico corresponsal"
            android:textColor="@color/black"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/txt_saldo_confirmacion_corresponsal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="158dp"
            android:layout_marginEnd="-22dp"
            android:text="Saldo Inicial"
            android:textAlignment="center"
            android:textColor="@color/azul"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100sp"
            android:layout_marginTop="130dp"
            android:text="saldo actual"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_numero_nit_confirmacion_corresponsal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="98dp"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="85dp"
            android:text="Numero Cedula"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/azul"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_correo_confirmacion_corresponsal"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="107dp"
            android:layout_marginEnd="43dp"
            android:gravity="center"
            android:text="correo electronico"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/azul"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/signo_dinero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txt_saldo_confirmacion_corresponsal"
            android:layout_alignParentStart="true"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="-120dp"
            android:layout_toStartOf="@+id/txt_saldo_confirmacion_corresponsal"
            android:fontFamily="@font/ubuntu_bold"
            android:text="$"
            android:textColor="@color/azul"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-190dp"
        android:background="@drawable/fondo_button_azul"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirmar_estado_datos_corresponsal"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#2196F3"
            android:visibility="visible"
            android:text="Habilitar"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancelar_confirmacion_estado_datos_corresponsal"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:strokeColor="#2196F3"
            android:textColor="#2196F3"
            app:strokeWidth="1dp"
            android:visibility="gone"
            android:backgroundTint="@color/white"
            android:text="Deshabilitar"/>
    </LinearLayout>



</LinearLayout>