<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/fondologo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <TextView
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_bold"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:textSize="48sp"
        android:layout_marginTop="5dp"
        android:text="Corresponsal Bancario"
        style="@style/shadoweffect"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/ubuntu"
        android:textSize="14sp"
        android:layout_marginStart="15sp"
        android:gravity="center"
        android:text="Pagar, retirar, depositar, transferir o consultar en la palma de tu mano"
        android:textColor="@color/gris_banco" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_inicia_sesion_prelogin"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="500dp"
        android:backgroundTint="@color/azul"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Inicia SesiÃ³n"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:cornerRadius="180dp"
        app:strokeColor="@color/azul" />
    </LinearLayout>
</ScrollView>
</LinearLayout>