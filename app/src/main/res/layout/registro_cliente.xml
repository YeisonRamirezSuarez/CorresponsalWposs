<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/fondoCrearCliente"
    android:background="@drawable/fondosecundarioazul"
    android:paddingHorizontal="20dp">



    <TextView
        android:id="@+id/tituloCrearCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_bold"
        style="@style/shadoweffect"
        android:textColor="@color/azul"
        android:text="Crear cliente"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="2dp"
        android:textSize="45dp"/>

    <View
        android:id="@+id/barraTitulo"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/azul"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre Cliente"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="70dp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#787676"
        android:layout_marginTop="10dp"
        app:hintTextColor="@color/black"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

        <EditText
            android:id="@+id/txt_nombre_crear_cliente"
            android:layout_width="match_parent"
            android:drawablePadding="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:digits=" ABCDEFGHIJKLMNÑOPQRSTUVWXYZ"
            android:inputType="textCapCharacters"
            android:drawableLeft="@drawable/ic_coolicon_name_azul"
            android:layout_height="60dp"
            android:layout_marginTop="7dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Numero de cédula"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"/>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#787676"
        android:layout_marginTop="10dp"
        app:hintTextColor="@color/black"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

        <EditText
            android:id="@+id/txt_cedula_crear_cliente"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:inputType="number"
            android:maxLength="13"
            android:textStyle="bold"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/ic_cedula_azul"
            android:layout_marginTop="7dp"/>

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saldo inicial"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"/>



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#787676"
        android:layout_marginTop="10dp"
        app:hintTextColor="@color/black"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

        <EditText
            android:id="@+id/txt_saldo_crear_cliente"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawablePadding="20dp"
            android:textSize="20sp"
            android:maxLength="9"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_monetizacion_azul"
            android:inputType="number"
            android:layout_marginTop="7dp"/>

    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="40dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirmar_crear_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="180dp"
            app:strokeColor="@color/gris"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:fontFamily="@font/ubuntu_bold"
            android:backgroundTint="@color/azul"
            android:text="Confirmar"
            android:textColor="@color/white"
            android:layout_weight=".1"/>

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancelar_crear_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:layout_weight=".1"

            android:layout_gravity="center"
            android:backgroundTint="@null"
            android:fontFamily="@font/ubuntu_medium"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="180dp"
            app:strokeColor="@color/azul"
            android:textAllCaps="false"
            android:textColor="@color/azul"
            android:textSize="16sp"
            app:backgroundTint="@color/white" />
    </LinearLayout>


</LinearLayout>