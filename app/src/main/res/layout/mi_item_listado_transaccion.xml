<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="20dp"
    android:background="@drawable/fondo_button_naranaja_borde">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
                android:orientation="horizontal"
            android:layout_marginTop="10dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <TextView
                    android:id="@+id/nombre_libro_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Fecha Transacción"
                    android:layout_marginStart="10dp"
                    android:textColor="#000000"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/fecha_transaccion_txt"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingStart="20dp"
                    android:text="nombre "
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>


                <TextView
                    android:id="@+id/autor_libro_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Tipo de transacción"
                    android:textColor="#000000"
                    android:layout_marginStart="10dp"

                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/tipo_transaccion_txt"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:paddingStart="20dp"
                    android:text="cuenta"
                    android:textStyle="bold"
                    android:textColor="@color/naranja"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <TextView
                    android:id="@+id/nombre_transaccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Nombre cliente transacción"
                    android:textColor="#000000"
                    android:layout_marginStart="10dp"

                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/nombre_transaccion_txt"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:paddingStart="20dp"
                    android:text="nombre"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <TextView
                    android:id="@+id/fecha_prestamo_libro_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Monto de transacción"
                    android:layout_marginStart="10dp"

                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/monto_transaccion_txt"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingStart="20dp"
                    android:text= "cedula"
                    android:textColor="@color/naranja"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>


                <TextView
                    android:id="@+id/cedula"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="N° cedula transacción"
                    android:layout_marginStart="10dp"

                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/cedula_transaccion_txt"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingStart="20dp"
                    android:text= "cedula"
                    android:textColor="#5C5757"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>





        </LinearLayout>

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="@drawable/fondo_button_naranja">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="ID"/>

                <TextView
                    android:id="@+id/id_transaccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="1"/>


        </LinearLayout>













</LinearLayout>