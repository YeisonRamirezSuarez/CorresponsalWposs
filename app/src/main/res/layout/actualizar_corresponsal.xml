<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/fondosecundario"
  >

    <TextView
        style="@style/shadoweffect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/ubuntu_bold"
        android:gravity="center"
        android:text="Actualizar corresponsal"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:textStyle="bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/naranja"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:paddingHorizontal="30dp"
        android:orientation="vertical">


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#787676"
            android:layout_marginTop="10dp"
            app:hintTextColor="@color/black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

            <EditText
                android:id="@+id/contraseña_actual"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:background="@drawable/fondo_button_naranaja_borde"
                android:hint="Contraseña Actual"
                android:inputType="textPassword"
                android:maxLength="20"
                android:textAlignment="center"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#787676"
            android:layout_marginTop="10dp"
            app:hintTextColor="@color/black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

            <EditText
                android:id="@+id/contraseña_nueva"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:textStyle="bold"
                android:background="@drawable/fondo_button_naranaja_borde"
                android:hint="Contraseña Nueva"
                android:inputType="textPassword"
                android:maxLength="20"
                android:textAlignment="center" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#787676"
            android:layout_marginTop="10dp"
            app:hintTextColor="@color/black"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

            <EditText
                android:id="@+id/contraseña_confirmar_nueva"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:textStyle="bold"
                android:background="@drawable/fondo_button_naranaja_borde"
                android:hint="Confirmar Contraseña Nueva"
                android:inputType="textPassword"
                android:maxLength="20"
                android:textAlignment="center"/>

        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/confirmar_actualizacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/naranja"
                android:text="Confirmar" />

            <View
                android:layout_width="40dp"
                android:layout_height="match_parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancelar_actualizacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:text="Cancelar"
                android:textColor="@color/naranja"
                app:strokeColor="@color/naranja"
                app:strokeWidth="1dp" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>