<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">


        <LinearLayout
            android:id="@+id/infoUserBanner"
            android:layout_width="wrap_content"
            android:layout_height="340dp"
            android:layout_marginStart="-70dp"
            android:layout_marginTop="-160dp"
            android:background="@drawable/ic_banco"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="100dp"
                android:layout_marginTop="180dp">


                <TextView
                    android:id="@+id/nameUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Nombre Banco" />




                <TextView
                    android:id="@+id/stateUser"
                    android:layout_width="228dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"
                    tools:text="Numero cuenta" />

            </LinearLayout>



        </LinearLayout>


        <ImageView
            android:id="@+id/regresarLogin"
            android:layout_width="63dp"
            android:layout_height="60dp"
            android:onClick="showPopup"
            android:layout_gravity="end"
            android:layout_marginTop="-180dp"
            android:layout_marginBottom="90dp"
            android:background="@drawable/ic_menu_azul" />

    </LinearLayout>
</LinearLayout>